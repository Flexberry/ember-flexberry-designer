<div class="content-mini">
  <div class="ui {{if loadingState "active"}} inverted dimmer">
    <div class="ui text loader"></div>
  </div>

  {{#if showToolbar}}
    <div class="fd-sheet-toolbar">
      {{#if savingSheet}}
        <button class="ui button" {{action 'save'}}>
          {{t "components.fd-sheet.save-caption"}}
        </button>
      {{/if}}
      <button class="ui icon button" {{action 'expand'}}>
        <i class="icon-fd-resize icon" ></i>
      </button>
      <button class="ui icon button" {{action 'closeSheet'}}>
        <i class="icon-fd-x-mark icon" ></i>
      </button>
    </div>
  {{/if}}

  {{flexberry-textbox
    value=title
    placeholder=(t "components.fd-sheet.placeholder-caption")
    readonly=readonly
    class='form-header fluid'
    maxlength=maxlength
  }}
  {{yield}}
</div>
