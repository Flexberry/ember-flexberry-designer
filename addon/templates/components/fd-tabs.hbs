{{#ui-tab-menu theme=tabsMenuTheme}}
  {{#each tabs as |ta|}}
    <a class="item" {{action "tabClick" ta bubbles=false}} data-tab="{{ta.tab}}" >{{ta.title}}</a>
  {{/each}}
  {{#if overflowButtonShow}}
    {{fd-tab-dropdown
      items = _hideTabs
      class = 'overflovwed-dropdown'
      placeholder = moreValue
      onChange = (action "changeLastTab")
      needChecksOnValue = false
    }}
  {{/if}}
{{/ui-tab-menu}}

{{yield
  (hash
    pane=(component "ui-tab-segment" parent=this)
  )
}}