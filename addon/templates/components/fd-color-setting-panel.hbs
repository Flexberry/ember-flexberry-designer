{{#if isClass}}
  <div class="field ui popup-element">
    <label>{{t "components.fd-color-setting-panel.stereotype-label"}}</label>
    {{flexberry-dropdown
      items=stereotypeItems
      value=stereotypeValue
    }}
  </div>
{{/if}}
<div class="ui popup-element">
  {{t "components.fd-color-setting-panel.text-color-label"}}
  {{input type="color" value=textValue}}
</div>
<div class="ui popup-element">
  {{t "components.fd-color-setting-panel.background-color-label"}}
  {{input type="color" value=backgroundValue}}
</div>
<div class="ui popup-element">
  <button class='ui button primary' onclick={{action 'applySettings'}}>
    {{t "components.fd-color-setting-panel.button-caption"}}
  </button>
</div>
