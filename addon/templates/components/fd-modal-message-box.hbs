{{#if show}}
  {{#modal-dialog
    title=(if isError (t "components.fd-modal-message-box.error-caption") (t "components.fd-modal-message-box.confirmation-caption"))
    useOkButton=(not isError)
    useCloseButton=(not isError)
    componentName=componentName
    settings=(hash
      onHidden=(action "onHide")
      onApprove=(action "onApprove")
      onDeny=(action "onDeny")
      context=".pusher:first"
    )
  }}
    {{messageText}}
  {{/modal-dialog}}
{{/if}}
