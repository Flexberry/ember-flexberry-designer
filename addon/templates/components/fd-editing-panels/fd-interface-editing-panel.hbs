<div class="ui stackable grid fd-list">

  <div class="row">
    <div class="three wide column">
      {{t "components.fd-interface-editing-panel.description-caption"}}
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-textarea
        value=model.description
        class='fluid input'
        placeholder=(t "components.fd-interface-editing-panel.description-placeholder")
      }}
    </div>
  </div>

  <div class="row">
    <div class="three wide column">
      <div>{{t "components.fd-interface-editing-panel.packet-caption"}}</div>
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-textbox
        value=model.packet
        class='fluid input'
        placeholder=(t "components.fd-interface-editing-panel.packet-placeholder")
      }}
    </div>
  </div>

  <div class="row">
    <div class="three wide column">
      <div>{{t "components.fd-interface-editing-panel.namespace-postfix-caption"}}</div>
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-textbox
        value=model.namespacePostfix
        class='fluid input'
        placeholder=(t "components.fd-interface-editing-panel.namespace-postfix-placeholder")
      }}
    </div>
  </div>

  <div class="row">
    <div class="three wide column">
      <div>{{t "components.fd-interface-editing-panel.bs-caption"}}</div>
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-dropdown
        items=bsItems.names
        value=bsValue
        class='fluid input'
        isSearch=true
        onChange=(action "changeBsValue")
      }}
    </div>
  </div>

  {{#if model.businessServerClass}}
  <div class="row">
    <div class="three wide column">
      <div>{{t "components.fd-interface-editing-panel.bs-events-caption"}}</div>
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-dropdown
        items=(flexberry-enum 'i-c-s-soft-s-t-o-r-m-n-e-t-business-data-service-object-events')
        value=model.businessServerEvents
        class='fluid input'
      }}
    </div>
  </div>
  {{/if}}

  {{fd-attribute-table
    tableView=tableViewAttribute
    buttonCaption=attributeButton
    model=model.attributes
    create=(action 'createAttribute')
  }}

  {{fd-attribute-table
    tableView=tableViewMethods
    buttonCaption=methodsButton
    model=model.methods
    create=(action 'createMethod')
  }}

</div>
