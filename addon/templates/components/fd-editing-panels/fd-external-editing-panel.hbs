<div class="ui stackable grid fd-list">

  <div class="row">
    <div class="five wide column">
      {{t "components.fd-external-editing-panel.template-caption"}}
    </div>
    <div class="eleven wide column light-text">
      {{flexberry-dropdown
        items=stageItems.names
        value=stageValue
        class='compact'
        onChange=(if deactivateActions '' (action "changeStageValue"))
      }}
      {{#if stageValue}}
        {{flexberry-dropdown
          items=classItems.names
          value=classValue
          class='compact'
          onChange=(if deactivateActions '' (action "changeClassValue"))
        }}
      {{/if}}

    </div>
  </div>

  <div class="row">
    <div class="five wide column">
      <div>{{t "components.fd-external-editing-panel.packet-caption"}}</div>
    </div>
    <div class="eleven wide column light-text">
      {{flexberry-textbox
        value=model.packet
        class='fluid input'
        placeholder=(t "components.fd-external-editing-panel.packet-placeholder")
      }}
    </div>
  </div>

  <div class="row">
    <div class="five wide column">
      <div>{{t "components.fd-external-editing-panel.namespace-postfix-caption"}}</div>
    </div>
    <div class="eleven wide column light-text">
      {{flexberry-textbox
        value=model.namespacePostfix
        class='fluid input'
        placeholder=(t "components.fd-external-editing-panel.namespace-postfix-placeholder")
      }}
    </div>
  </div>

  {{fd-attribute-table
    tableView=tableViewForStoreInstancesInType
    buttonCaption=storeInstancesInTypeButton
    model=model.storeInstancesInTypeXML
    create=(action 'createStoreInstancesInType')
    delete=(action 'deleteStoreInstancesInType')
  }}

</div>
