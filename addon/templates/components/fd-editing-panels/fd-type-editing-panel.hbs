<div class="ui stackable grid fd-list">

  <div class="row">
    <div class="three wide column">
      {{t "components.fd-type-editing-panel.description-caption"}}
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-textarea
        value=model.description
        class='fluid input'
        placeholder=(t "components.fd-type-editing-panel.description-placeholder")
      }}
    </div>
  </div>

  <div class="row">
    <div class="three wide column">
      <div>{{t "components.fd-type-editing-panel.packet-caption"}}</div>
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-textbox
        value=model.packet
        class='fluid input'
        placeholder=(t "components.fd-type-editing-panel.packet-placeholder")
      }}
    </div>
  </div>

  <div class="row">
    <div class="three wide column">
      <div>{{t "components.fd-type-editing-panel.namespace-postfix-caption"}}</div>
    </div>
    <div class="thirteen wide column light-text">
      {{flexberry-textbox
        value=model.namespacePostfix
        class='fluid input'
        placeholder=(t "components.fd-type-editing-panel.namespace-postfix-placeholder")
      }}
    </div>
  </div>

  {{fd-attribute-table
    tableView=tableViewForStoreInstancesInType
    buttonCaption=storeInstancesInTypeButton
    model=model.storeInstancesInTypeXML
    create=(action 'createStoreInstancesInType')
    delete=(action 'deleteStoreInstancesInType')
  }}

</div>
