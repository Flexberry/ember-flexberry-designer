<div class="ui stackable grid fd-list">

  <div class="row">
    <div class="five wide column">
      {{t "components.fd-editform-editing-panel.caption-caption"}}
    </div>
    <div class="eleven wide column light-text">
      {{flexberry-textbox
        value=model.caption
        class='fluid input'
        placeholder=(t "components.fd-editform-editing-panel.caption-placeholder")
      }}
    </div>
  </div>

  <div class="row">
    {{#flexberry-toggler
        caption=(t 'components.fd-editform-editing-panel.toggler-caption')
        expanded=false
    }}
    <div class="ui grid fd-list">
      <div class="row">
        <div class="five wide column">
          {{t "components.fd-editform-editing-panel.description-caption"}}
        </div>
        <div class="eleven wide column light-text">
          {{flexberry-textarea
            value=model.description
            class='fluid input'
            placeholder=(t "components.fd-editform-editing-panel.description-placeholder")
          }}
        </div>
      </div>

      <div class="row">
        <div class="five wide column">
          {{t "components.fd-editform-editing-panel.publish-name-caption"}}
        </div>
        <div class="eleven wide column light-text">
          {{flexberry-textbox
            value=model.publishName
            class='fluid input'
            placeholder=(t "components.fd-editform-editing-panel.publish-name-placeholder")
          }}
        </div>
      </div>

      <div class="row">
        <div class="five wide column">
          {{t "components.fd-editform-editing-panel.packet-caption"}}
        </div>
        <div class="eleven wide column light-text">
          {{flexberry-textbox
            value=model.packet
            class='fluid input'
            placeholder=(t "components.fd-editform-editing-panel.packet-placeholder")
          }}
        </div>
      </div>

      <div class="row">
        <div class="five wide column">
          {{t "components.fd-editform-editing-panel.namespace-postfix-placeholder"}}
        </div>
        <div class="eleven wide column light-text">
          {{flexberry-textbox
            value=model.namespacePostfix
            class='fluid input'
            placeholder=(t "components.fd-editform-editing-panel.namespace-postfix-placeholder")
          }}
        </div>
      </div>
    </div>
    {{/flexberry-toggler}}
  </div>

  <div class="row">
    <div class="five wide column">
      <div>{{t "components.fd-editform-editing-panel.formview-caption"}}</div>
    </div>
    <div class="eleven wide column light-text">
      {{flexberry-dropdown
        items=viewItems.names
        value=viewValue
        class='compact input'
        onChange=(action "changeViewValue")
      }}
    </div>
  </div>

</div>
