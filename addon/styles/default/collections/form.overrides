.ui.form :read-only:focus::-webkit-input-placeholder {
  color: @lightTextColor;
}
.ui.form :read-only:focus:-ms-input-placeholder {
  color: @lightTextColor;
}
.ui.form :read-only:focus::-moz-placeholder {
  color: @lightTextColor;
}

.ui.loading.form::after {
  left: calc(~'50% - @{sidebarWdth}');
  transition: left 250ms ease;
}

.ui.loading.form.content-opened::after {
  left: calc(~'50% - @{sidebarMiniWidth}');
}