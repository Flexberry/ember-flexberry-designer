/*******************************
             Modal
*******************************/
@boxShadow: none;

/* Header */
@headerBackground: @pageBackground;
@headerBorder: none;
@headerHorizontalPadding: @leftIndent;

@headerPadding: 2rem @headerHorizontalPadding 1rem;

/* Content */
@contentBackground: @pageBackground;
@contentPadding: 1rem @leftIndent 2rem;

/* Modal Actions */
@actionAlign: center;
@actionBackground: @contentBackground;
@actionBorder: none;
@actionPadding: 1rem 1rem 2rem;