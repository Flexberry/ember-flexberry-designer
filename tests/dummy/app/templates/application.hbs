{{#if isInAcceptanceTestMode}}
  {{outlet}}
  {{outlet "modal"}}
{{else}}
{{#ui-sidebar
  class="vertical main menu visible uncover"
  ui_context=".ember-application > .ember-view"
  closable=false
  dimPage=false
  onShow=(action "updateWidth")
  onHidden=(action "updateWidth")
}}
  {{render "sitemap" sitemapTop}}

  <button {{action 'toggleSidebar'}} class="ui toggle-sidebar-visible icon button">
    <i class="caret left icon"></i>
  </button>
  {{render "sitemap" sitemap}}

  <div class="sitemap-bottom">
    {{render "sitemap" sitemapBottom}}
  </div>
{{/ui-sidebar}}
<button {{action 'toggleSidebar'}} class="ui toggle-sidebar icon button">
  <i class="caret right icon"></i>
</button>
{{outlet 'right-sidebar'}}

<div id="example" class="pusher">
  <div class="ui form {{appState.state}}">
    <div class="full height">
      <div class="flexberry-content">
         <div class="ui main container fluid">
            {{outlet}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="ui main container">
  {{outlet "modal"}}
</div>
<div class="ui vertical footer segment">
  <div class="ui container flex-container">
    <div class="ui text menu">
      <a class="brand item" href="#">
        {{t "forms.application.footer.application-name"}}
      </a>
      <div class="right menu">
        {{flexberry-dropdown
          class="compact"
          items=locales
          value=i18n.locale
          placeholder=(t "forms.application.header.menu.language-dropdown.placeholder")
          direction="upward"
        }}
      </div>
    </div>
  </div>
</div>
{{/if}}
