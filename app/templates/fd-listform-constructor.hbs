<h3 class="ui header">{{t "forms.fd-listform-constructor.caption"}}</h3>
{{#if errorMessages}}
  {{#each errorMessages as |currentError|}}
    {{ui-message
      type='error'
      closeable=true
      visible=true
      title='Error occurred'
      message=currentError
    }}
  {{/each}}
{{/if}}
<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-close-button" {{action 'save-close'}}>
            {{t "forms.edit-form.saveAndClose-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button">
        {{t "forms.fd-listform-constructor.preview-mobile-variant"}}
      </button>
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="ui segment">
    <h3 class="ui header">{{formClass.name}}</h3>
    <img src="assets/images/visualEditListFormTop.png" />
    <table class="ui celled selectable collapsing table">
      <thead>
        <tr>
          {{#each columns as |column|}}
            <th {{action "selectColumn" column}}>{{column.caption}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each columns as |column|}}
          <tr>
            {{#each columns as |column|}}
              <td class={{if (eq selectedColumn column) "positive"}} {{action "selectColumn" column}}>&nbsp;</td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
    <img src="assets/images/visualEditListFormBottom.png" />
  </div>
</form>

{{#if _showModalDialog}}
  {{#modal-dialog
    title=(t "forms.fd-listform-constructor.form-config-panel.remove-column")
    ok=(action "removeSelectedColumn" true)
    settings=(hash
      onHidden=(action set "_showModalDialog" false)
      context=".pusher:first"
    )
  }}
    {{t "forms.fd-listform-constructor.form-config-panel.remove-approve"}}
  {{/modal-dialog}}
{{/if}}

{{#fd-config-panel}}
  {{#fd-tabs tabsMenuTheme="vertical tabular" class="ui segments horizontal right-tabs"}}
    <form class="ui form segment">
      <div class="ui segment">
        <div class="ui large header">
          {{t "forms.fd-editform-constructor.caption"}}
        </div>
      </div>
      {{#ui-tab-segment tab='first' title=(t "forms.fd-editform-constructor.form-config-panel.form-properties-header") theme="" active=true}}
        <div class="ui small dividing header">
          {{t "forms.fd-editform-constructor.form-config-panel.form-properties-header"}}
        </div>

        <div class="field">
          {{
            flexberry-field
            placeholder=(t "forms.fd-listform-constructor.name")
            readonly=readonly
            required=true
            value=formClass.name
            label=(t "forms.fd-listform-constructor.name")
          }}
        </div>

      {{/ui-tab-segment}}

      {{#ui-tab-segment tab='control-properties' title=(t "forms.fd-editform-constructor.form-config-panel.control-properties-header") theme=""}}
        <div class="ui small dividing header">
          {{t "forms.fd-editform-constructor.form-config-panel.control-properties-header"}}
        </div>
        {{fd-visual-edit-control
          selectedControl=selectedAttribute
          typemap=model.typemap
          enums=model.enums
          fbtypes=model.types
        }}
      {{/ui-tab-segment}}

      {{#ui-tab-segment tab="actions-with-columns" title=(t "forms.fd-listform-constructor.form-config-panel.actions-with-columns-header") theme=""}}
        <div class="ui small dividing header">
          {{t "forms.fd-listform-constructor.form-config-panel.re-move-columns-header"}}
        </div>
        <div class="equal width fields">
          <div class="field">
            <button class="ui icon button" disabled={{or (not selectedColumn) _selectedIsFirst}} {{action "sortSelectedColumn" -1}}>
              <i class="left arrow icon"></i>
            </button>
            <button class="ui icon button" disabled={{or (not selectedColumn) _selectedIsLast}} {{action "sortSelectedColumn" 1}}>
              <i class="right arrow icon"></i>
            </button>
          </div>
          <div class="field">
            <button class="ui button" disabled={{not selectedColumn}} {{action "removeSelectedColumn" false}}>
              {{t "forms.fd-listform-constructor.form-config-panel.remove-column"}}
            </button>
          </div>
        </div>
      {{/ui-tab-segment}}

    </form>
  {{/fd-tabs}}
{{/fd-config-panel}}