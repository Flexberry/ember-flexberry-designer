<div class="field">
    <label>{{prototypeByDropdownCaption}}</label>
    {{flexberry-dropdown
      items=avaliableControls
      value=prototypeBy
      class=undefined
      onChange=(action 'avaliableControlChange')
    }}
</div>
<div class="field">
    <label>{{nameTextboxCaption}}</label>
    {{flexberry-textbox
      value=model.editControl.name
    }}
</div>
<div class="field">
    <label>{{typeDropdownCaption}}</label>
    {{flexberry-dropdown
      items=model.controlTypes
      value=model.editControl.type
      class=undefined
      onChange=(action 'controlTypeChange' model.typeName)
    }}
</div>
<div class="field">
    <label>{{isNullCheckboxCaption}}</label>
    {{flexberry-checkbox
      class="fluid"
      value=model.editControl.isNull
    }}
</div>
<div class="field">
    <label>{{defaultValueTextboxCaption}}</label>
    {{component model.defaultValueControl
      value=model.editControl.defaultValue
      type=model.inputType
    }}
</div>
