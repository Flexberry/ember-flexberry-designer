<div class="field">
    <label>{{prototypeByDropdownCaption}}</label>
    {{flexberry-dropdown
      items=avaliableControls
      value=model.prototypeBy
      class=undefined
      onChange=(action 'avaliableControlChange' model.prototypeBy)
    }}
</div>
<div class="field">
    <label>{{nameTextboxCaption}}</label>
    {{flexberry-textbox
      value=model.name
    }}
</div>
<div class="field">
    <label>{{typeDropdownCaption}}</label>
    {{flexberry-dropdown
      items=controlTypes
      value=model.type
      class=undefined
      onChange=(action 'controlTypeChange' model.type)
    }}
</div>
<div class="field">
    <label>{{isNullCheckboxCaption}}</label>
    {{flexberry-checkbox
      class="fluid"
      value=model.isNull
      readonly=model.notNullable
    }}
</div>
<div class="field">
    <label>{{defaultValueTextboxCaption}}</label>
    {{flexberry-textbox
      value=model.defaultValue
    }}
</div>
