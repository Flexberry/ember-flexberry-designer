  {{flexberry-validationmessage error=model.errors.namespacePostfix pointing="pointing"}}
</div>

<div class="field">
  <label>{{t 'forms.fd-external-edit-form.pBMembers-caption'}}</label>
  {{
    flexberry-checkbox
    readonly=readonly
    value=model.pBMembers
  }}
</div>

<div class="field">
  <label>{{t 'forms.fd-external-edit-form.pBCustomAttributes-caption'}}</label>
  {{
    flexberry-checkbox
    readonly=readonly
    value=model.pBCustomAttributes
  }}
