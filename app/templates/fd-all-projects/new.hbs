<div class="fd-centered-new-form">
  <h1>{{t "forms.fd-all-projects.creating-new"}}</h1>
  <div class="ui stackable grid fd-list-edited">
    <div class="row">
      <div class="four wide column">
        {{t "forms.fd-all-projects.name"}}
      </div>
      <div class="twelve wide column light-text">
        {{flexberry-textbox
          class="fluid input"
          value=projectName
          placeholder=(t "forms.fd-all-projects.name-placeholder")
        }}
      </div>
    </div>
    <div class="row">
      <div class="sixteen wide column light-text">
        {{t "forms.fd-all-projects.name-example"}},
        <a href="#" {{action set "projectName" (t nameExample)}} class="fd-styled-link">
          {{t nameExample}}
        </a>
        <a href="#" {{action notifyPropertyChange "nameExample"}}>
          <i class="recycle icon"></i>
        </a>
      </div>
    </div>
    <div class="row">
      <div class="four wide column">
        <div>{{t "forms.fd-all-projects.access"}}</div>
      </div>
      <div class="twelve wide column light-text">
        <div class="field">
          {{flexberry-checkbox label=(t "forms.fd-all-projects.access-private")}}
        </div>
        <div class="field">
          {{flexberry-checkbox label=(t "forms.fd-all-projects.access-public")}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="four wide column">
        <div>{{t "forms.fd-all-projects.description"}}</div>
      </div>
      <div class="twelve wide column light-text">
        {{flexberry-textbox
          class="fluid input"
          placeholder=(t "forms.fd-all-projects.description-placeholder")
        }}
      </div>
    </div>
  </div>
  <div class="ui stackable grid">
    <div class="center aligned two column row">
      <div class="column">
        {{fd-round-button
          iconClass="icon-fd-x-mark-thin" 
          caption=(t "forms.fd-all-projects.cancel")
          onButtonClicked=(action 'cancelButton')
        }}
      </div>
      <div class="column">
        {{fd-round-button 
          iconClass="icon-fd-cloud-upload-thin" 
          colorClass="blue" 
          caption=(t "forms.fd-all-projects.create-project")
        }}
      </div>
    </div>
  </div>
</div>