<h2 class='form-header'>
  {{t "forms.fd-application-model.caption"}}
</h2>

<form class="ui form flexberry-vertical-form">

  <div class="ui stackable grid fd-list">
    <div class="row">
      <div class="two wide column light-text">
        {{t "forms.fd-application-model.type-caption"}}
      </div>
      <div class="fourteen wide column">
        {{fd-search-input}}
      </div>
    </div>
    <div class="row">
      <div class="two wide column light-text">
        {{t "forms.fd-application-model.enum-caption"}}
      </div>
      <div class="fourteen wide column">
        {{fd-list-item
          caption='tПол'
        }}
        {{fd-list-item
          caption='tЖилье'
        }}
        {{fd-list-item
          caption='tОбразование'
        }}
        {{fd-button
          caption=(t "forms.fd-application-model.enum-caption")
        }}
      </div>
    </div>
    <div class="row">
      <div class="two wide column light-text">
        {{t "forms.fd-application-model.entity-caption"}}
      </div>
      <div class="fourteen wide column">
        {{fd-list-item
          caption='Пациент'
        }}
      </div>
      <div class="two wide column light-text">
        {{t "forms.fd-application-model.editor-caption"}}
      </div>
      <div class="fourteen wide column">
        {{fd-list-item
          caption='ПациентE'
        }}
      </div>
      <div class="two wide column light-text">
        {{t "forms.fd-application-model.list-caption"}}
      </div>
      <div class="fourteen wide column">
        {{fd-list-item
          caption='ПациентL'
        }}
      </div>
      <div class="right floated fourteen wide column">
        {{fd-button
          caption=(t "forms.fd-application-model.editor-caption")
        }}
        {{fd-button
          caption=(t "forms.fd-application-model.list-caption")
        }}
      </div>
    </div>
  </div>
</form>
{{#fd-sheet
  title = 'Пациент'
}}
  <div class="ui stackable grid fd-list">
    <div class="row">
      <div class="three wide column">
        {{t "forms.fd-application-model.value-caption"}}
      </div>
      <div class="thirteen wide column light-text">
        {{flexberry-textbox
          class='fluid input'
          placeholder=(t "forms.fd-application-model.entity-header-placeholder")
        }}
      </div>
    </div>
    <div class="row">
      <div class="three wide column">
        <div>{{t "forms.fd-application-model.storage-caption"}}</div>
      </div>
      <div class="thirteen wide column light-text">
        {{flexberry-textbox
          class='fluid input'
          placeholder=(t "forms.fd-application-model.storage-name-placeholder")
        }}
      </div>
      <div class="three wide column">
        <div>{{t "forms.fd-application-model.stored-caption"}}</div>
      </div>
      <div class="thirteen wide column light-text">
        {{flexberry-textbox
          class='fluid input'
          placeholder=(t "forms.fd-application-model.storage-name-placeholder")
        }}
      </div>
      <div class="three wide column">
        <div>{{t "forms.fd-application-model.bs-caption"}}</div>
      </div>
      <div class="thirteen wide column light-text">
        <div>Нет значения</div>
      </div>
    </div>
  </div>
{{/fd-sheet}}
